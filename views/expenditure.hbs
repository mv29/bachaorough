    <style>
        h1{
            background: steelblue ;
            height: 100px;
            text-align: center;
            font-size: 80px;
            padding: 0px;
            margin: 0px;
            color: ghostwhite;
        }
        .mv{
            width: 800px;
            height: 450px;
            margin: 20px;
            padding: 20px;
            background: lightseagreen ;
            color: ghostwhite;
            font-size: 20px;
        }
        hr {
            display: block;
            border-style: inset;
            border-width: 2px;
        }
